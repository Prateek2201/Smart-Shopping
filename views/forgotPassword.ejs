<html>
    <head>
        <meta charset="utf-8">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
        <link rel="stylesheet" href="/styles/signup.css">
        <title></title>
    </head>
    <body>
        <center>
        <br><h1>Forgot Password</h1><br>
        <div class="d-flex justify-content-center" style="width: 600px;">
        <form method="post" action="/forgotPassword">
          <div class="form-group" style="border:none;">
            <label>Username</label>
            <input type="text" class="form-control" name="username" placeholder="Enter Username">
          </div>
          <div class="form-group" style="border:none;">
            <label>Registered E-Mail</label>
            <input type="email" class="form-control" name="email" placeholder="Enter Registered E-Mail">
          </div>
          <button type="submit" class="btn btn-primary">Reset Password</button>
        </form>
        </div>
        <% if(error){ %>
            <div style="background-color: cyan;padding:10px">
              <%= error %>
            </div>
          <% } %>
        </center>
    </body>
</html>